				@Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Detay, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextAreaFor(model => model.Detay, new { htmlAttributes = new { @class = "form-control input-lg textarea-editor" } })
				@Html.ValidationMessageFor(model => model.Detay, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Gorsel, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Gorsel, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Gorsel, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Ikon, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Ikon, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Ikon, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.EkAlan1, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.EkAlan1, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.EkAlan1, "", new { @class = "text-danger" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(model => model.EkAlan2, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.EkAlan2, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.EkAlan2, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Etkin, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.Etkin)
					@Html.ValidationMessageFor(model => model.Etkin, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.Yorum, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<div class="checkbox">
					@Html.EditorFor(model => model.Yorum)
					@Html.ValidationMessageFor(model => model.Yorum, "", new { @class = "text-danger" })
				</div>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Kaydet" class="btn btn-default" />
			</div>
		</div>
	}
</div>

<script src="~/Scripts/tinymce/tinymce.js"></script>
