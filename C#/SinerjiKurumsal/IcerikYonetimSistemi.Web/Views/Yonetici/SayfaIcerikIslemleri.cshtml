@model IcerikYonetimSistemi.VarlikKatmani.SayfaIcerik

@{
	ViewBag.Title = "Sayfa İçerik İşlemleri";
	Layout = "~/Views/Shared/YoneticiLayout.cshtml";
}
<div class="container">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<h4>Sayfa İçerik</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label col-md-2" })
