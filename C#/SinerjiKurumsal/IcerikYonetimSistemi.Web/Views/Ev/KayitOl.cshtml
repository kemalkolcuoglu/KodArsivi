@model IcerikYonetimSistemi.VarlikKatmani.EkModel.KullaniciKayit
@{
	ViewBag.Title = "KayitOl";
}

@using (Html.BeginForm())
{
	<div class="container" style="margin-top:30px">
		<div class="col-12 col-sm 12 col-md-4 col-lg-6">
			<div class="panel panel-default">
				<div class="panel-heading"><h3 class="panel-title"><strong>Kullanıcı Girişi </strong></h3></div>
				<div class="panel-body">
					@Html.ValidationSummary(false)
					<form role="form">
						<div class="form-group">
							<label>Kullanıcı Adı</label>
							@Html.TextBoxFor(model => model.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
						</div>
						<div class="form-group">
							<label>E-Posta Adresi</label>
							@Html.TextBoxFor(model => model.EPosta, new { @class = "form-control", placeholder = "ornek@ornek.com" })
						</div>
						<div class="form-group">
							<label>Şifre</label>
							@Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
						</div>
						<div class="form-group">
							<label>Şifre(Tekrar)</label>
							@Html.TextBoxFor(model => model.SifreTekrar, new { @class = "form-control", placeholder = "Şifreniz(Tekrar)", type = "password" })
						</div>
						<button type="submit" class="btn btn-danger">Kayıt Ol</button>
					</form>
				</div>
			</div>
		</div>
	</div>
}