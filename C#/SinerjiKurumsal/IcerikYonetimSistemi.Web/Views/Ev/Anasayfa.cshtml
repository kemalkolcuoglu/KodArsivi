											<div class="wprt-spacer clearfix" data-desktop="41" data-mobi="30" data-smobi="10"></div>

											<div class="wprt-toggles style-1 no-icon">
												@foreach (var items in saii.VeriListesi(x => x.SayfaIcerikID == 2 && x.Etkin))
												{
