
@{
	ViewBag.Title = "Anasayfa";
	IcerikYonetimSistemi.IslemKatmani.SayfaIslemleri si = new IcerikYonetimSistemi.IslemKatmani.SayfaIslemleri();
	IcerikYonetimSistemi.IslemKatmani.SayfaIcerikIslemleri sii = new IcerikYonetimSistemi.IslemKatmani.SayfaIcerikIslemleri();
	IcerikYonetimSistemi.IslemKatmani.SayfaAltIcerikIslemleri saii = new IcerikYonetimSistemi.IslemKatmani.SayfaAltIcerikIslemleri();
	List<IcerikYonetimSistemi.VarlikKatmani.SayfaAltIcerik> slide = saii.VeriListesi(x => x.SayfaIcerikID == 26);
}

<!-- Main Content -->
<div id="main-content" class="site-main clearfix">
	<div id="content-wrap">
		<div id="site-content" class="site-content clearfix">
			<div id="inner-content" class="inner-content-wrap">
				<div class="page-content">
					<!-- Slider -->
					<div class="rev_slider_wrapper fullwidthbanner-container">
						<div id="myCarousel" class="carousel slide" data-ride="carousel">
							<!-- Indicators -->
							<ol class="carousel-indicators">
								@for (int i = 0; i < slide.Count; i++)
								{
									if (i == 0)
									{
										<li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
									}
									else
									{
										<li data-target="#myCarousel" data-slide-to="@i"></li>
									}

								}
							</ol>

							<!-- Wrapper for slides -->
							<div class="carousel-inner">
								@for (int i = 0; i < slide.Count; i++)
								{
									if (i == 0)
									{
										<div class="item active">
											<img src="@slide[i].Gorsel" style="width: -webkit-fill-available;">
											<div class="carousel-caption">
												<h3>@slide[i].Baslik</h3>
												<p>@Html.Raw(slide[i].Detay)</p>
											</div>
										</div>
									}
									else
									{
										<div class="item">
											<img src="@slide[i].Gorsel" style="width: -webkit-fill-available;">
											<div class="carousel-caption">
												<h3>@slide[i].Baslik</h3>
												<p>@Html.Raw(slide[i].Detay)</p>
											</div>
										</div>
									}
								}
							<!-- Left and right controls -->
							<a class="left carousel-control" href="#myCarousel" data-slide="prev">
								<span class="glyphicon glyphicon-chevron-left"></span>
								<span class="sr-only">Geri</span>
							</a>
							<a class="right carousel-control" href="#myCarousel" data-slide="next">
								<span class="glyphicon glyphicon-chevron-right"></span>
								<span class="sr-only">İleri</span>
							</a>
						</div>
					</div>
					<!-- /Slider -->
					<!-- Services -->
					<div class="row-service-1">
						<div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>

									<div class="wprt-headings text-center clearfix">
										<h2 class="heading">Neler Yapıyoruz?</h2>
										<div class="sub-heading">Sinerji Kurumsal Olarak Bizi Öne Çıkartan Çalışmalarımız</div>
									</div>

									<div class="wprt-spacer clearfix" data-desktop="44" data-mobi="30" data-smobi="20"></div>
								</div>
								@foreach (var items in saii.VeriListesi(x => x.SayfaIcerikID == 11 && x.Etkin))
								{
									<div class="col-md-4 col-sm-6">
										<div class="wprt-content-box style-1 hover hover-1 hover-2">
											<div class="inner">
												<div class="wprt-icon-box clearfix icon-top align-center">
													<div class="icon-wrap"><i class="@items.Ikon"></i></div>

													<h3 class="heading">@items.Baslik</h3>

													<div class="desc">@Html.Raw(items.Detay)</div>
												</div>
											</div>
										</div>

										<div class="wprt-spacer clearfix" data-desktop="30" data-mobi="30" data-smobi="30"></div>
									</div>
								}

								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>
								</div>
							</div><!-- /.row -->
						</div><!-- /.container -->
					</div>
					<!-- Services -->
					<!-- About 1 -->
					<div class="row-about-1">
						<div class="container">
							<div class="row">
								@*<div class="col-md-12">
										<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="60"></div>
									</div>*@

