														<h3 class="toggle-heading">
															<span class="inner">
																<span class="icon-wrap"><i class="fa fa-plus"></i></span>
																@items.Baslik
															</span>
														</h3>

														<div class="toggle-content">
															@Html.Raw(items.Detay)
														</div>
													</div><!-- /.toggles-item -->
												}
											</div>
										</div>
									</div><!-- /.col-md-6 -->*@
								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>

									@*<div class="wprt-line"></div>

										<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="30"></div>*@

									<div class="wprt-headings text-center clearfix">
										<h2 class="heading">İşimizi Severek Yapıyoruz</h2>
										<div class="sub-heading">Sizlere çok daha iyi hizmet sunmaya çalışıyoruz</div>
									</div>

									<div class="wprt-spacer clearfix" data-desktop="17" data-mobi="10" data-smobi="10"></div>

									<div class="wd-850">
										<div class="row">
											@foreach (var items in saii.VeriListesi(x => x.SayfaIcerikID == 20))
											{
												<div class="col-md-2 col-sm-6">
													<div class="wprt-counter">
														<span class="number" data-speed="2000" data-to="@items.EkAlan1" data-inviewport="yes">@items.EkAlan1</span>
														@if (items.EkAlan2 != "")
														{
															<span class="suffix">@items.EkAlan2</span>
