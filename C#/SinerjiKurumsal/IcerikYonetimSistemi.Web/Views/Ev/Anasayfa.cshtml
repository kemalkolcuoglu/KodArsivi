														<div class="heading">@items.Baslik</div>
													</div>
												</div>
											}

										</div><!-- /.row -->
									</div>

									<div class="wprt-spacer clearfix" data-desktop="71" data-mobi="51" data-smobi="31"></div>
								</div>
							</div><!-- /.row -->
						</div><!-- /.container -->
					</div>
					<!-- /About 1 -->
					<!-- Portfolio -->
					<div class="row-portfolio-1">
						<div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>

									<div class="wprt-headings clearfix text-center">
										<h2 class="heading">Eğitimler</h2>
										<div class="sub-heading">Bireysel ve Kurumsal Gelişiminiz İçin Geniş Eğitim Katalogu</div>
									</div><!--wprt-headings -->

									<div class="wprt-spacer clearfix" data-desktop="42" data-mobi="30" data-smobi="30"></div>

									<div class="wprt-portfolio-grid" data-column="3" data-column2="3" data-column3="2" data-column4="1" data-gaph="30" data-gapv="30">
										<div id="projects" class="cbp">

											@foreach (var items in sii.VeriListesi(x => x.SayfaID == 4 && x.Etkin))
											{
												<div class="cbp-item strategy equity">
													<div class="project-item">
														<div class="inner">
															<div class="effect-default">
																<div class="project-image">
																	<img src="@items.Gorsel" alt="@items.Baslik">
																</div>

																<div class="text">
																	<div>
																		<h2><a href="~/Sayfalar/Icerik/@items.SayfaIcerikID" title="">@items.Baslik</a></h2>
																	</div>
																</div>
															</div><!-- /.effect-default -->
														</div>
													</div><!-- /.project-item -->
												</div><!-- /.cbp-item -->
											}
										</div><!-- /#projects -->
									</div><!-- /.wprt-portfolio-grid -->

									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>
								</div><!-- /.cold-md-12 -->
							</div><!-- /.row -->
						</div><!-- /.container -->
					</div>
					<!-- /Portfolio -->
					<!-- Testimonials -->
					<div class="row-testimonials-1 parallax">
						<div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="65" data-mobi="40" data-smobi="40"></div>

									<div class="wprt-carousel-box bullet0 bullet-style-2 bullet-circle has-bullets" data-auto="false" data-loop="false" data-gap="0" data-column="1" data-column2="1" data-column3="1">
										<div class="owl-carousel owl-theme">
											@foreach (var items in saii.VeriListesi(x => x.SayfaIcerikID == 24))
											{
												<div class="wprt-testimonials text-center clearfix ">
													<span class="arrow-3">“</span>

													<blockquote class="text">
														@Html.Raw(items.Detay)
													</blockquote>

													<div class="info">
														<h6 class="name">@items.Baslik</h6>
													</div>
												</div><!-- /.wprt-testimonials -->
											}
										</div>
									</div><!-- /.wprt-carousel-box -->

									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>
								</div><!-- /.col-md-12 -->
							</div><!-- /.row -->
						</div><!-- /.container -->
					</div>
					<!-- /Testimonials -->
					<!-- News -->
					<div class="row-news-1">
						<div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="80" data-mobi="60" data-smobi="40"></div>

									<div class="wprt-headings clearfix text-center">
										<h2 class="heading">Son Gelişmeler</h2>
									</div>

									<div class="wprt-spacer clearfix" data-desktop="33" data-mobi="25" data-smobi="20"></div>
								</div>
								@foreach (var items in sii.VeriListesi(x => x.SayfaID == 6 && x.Etkin).OrderBy(x => x.GosterimSirasi))
								{
									<div class="col-md-3 col-sm-6">
										<article class="news-item style-2">
											<div class="post-media clearfix">
												<a class="post-img" href="~/Sayfalar/Icerik/@items.SayfaIcerikID">
													<img src="@items.Gorsel" alt="@items.Baslik">
												</a><!-- /.post image -->
											</div>

											<div class="post-content-wrap">
												<h2 class="post-title">
													<a href="~/Sayfalar/Icerik/@items.SayfaIcerikID" rel="bookmark">@items.Baslik</a>
												</h2><!-- .post-title -->

												<div class="post-meta">
													<span class="meta date">@items.OlusturmaTarihi</span>
												</div><!-- /.post meta -->
											</div><!-- /.entry-content-wrap -->
										</article><!-- /.news-item -->
									</div>
								}

								<div class="col-md-12">
									<div class="wprt-spacer clearfix" data-desktop="34" data-mobi="20" data-smobi="0"></div>
								</div><!-- /.col-md-12 -->
							</div><!-- /.row -->
						</div><!-- /.container -->
					</div>
					<!-- /News -->
					<!-- Partner -->
					<div class="row-partner-1">
						<div class="container">
							<div class="row">
								<div class="col-md-12">
									<div class="wprt-line"></div>

									<div class="wprt-partner-slider" data-auto="true" data-column="6" data-column2="4" data-column3="2" data-gap="30">
										<div class="owl-carousel owl-theme owl-loaded owl-drag">
											@foreach (var items in saii.VeriListesi(x => x.SayfaIcerikID == 17 && x.Etkin))
											{
												<div class="partner-item clearfix">
													<img src="@items.Gorsel" alt="@items.Baslik" height="150">
												</div>
											}
										</div>
									</div>
								</div><!-- /.col-md-12 -->
							</div><!-- /.row -->
						</div><!-- /.container -->
					</div>
