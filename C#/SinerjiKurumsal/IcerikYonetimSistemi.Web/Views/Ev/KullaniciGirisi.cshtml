@model IcerikYonetimSistemi.VarlikKatmani.EkModel.KullaniciGiris
@{
	ViewBag.Title = "KullaniciGirisi";
}

@using (Html.BeginForm())
{
	<div class="container" style="margin-top:30px">
		<div class="col-12 col-sm 12 col-md-4 col-lg-6">
			<div class="panel panel-default">
				<div class="panel-heading"><h3 class="panel-title"><strong>Kullanıcı Girişi </strong></h3></div>
				<div class="panel-body">
					@Html.ValidationSummary(false)
					<form role="form">
						<div class="form-group">
							@Html.LabelFor(model => model.EPosta, htmlAttributes: new { @class = "control-label" })
							@Html.TextBoxFor(model => model.EPosta, new { @class = "form-control", placeholder = "ornek@ornek.com" })
						</div>
						<div class="form-group">
							@Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label" })
							@Html.TextBoxFor(model => model.Sifre, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
						</div>
						<button type="submit" class="btn btn-danger">Giriş Yap</button>
					</form>
				</div>
			</div>
		</div>
	</div>
}