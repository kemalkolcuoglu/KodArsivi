@model QRWebCMS.Web.Models.TeknikAyarlar
@{
    ViewBag.Title = "TeknikAyarlar";
    Layout = "~/Areas/Yonetici/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h4 class="m-b-10">Genel Ayarlar</h4>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/Yonetici/Panel/Anasayfa">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Teknik Ayarlar</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">
        <h5>Genel Ayarlar</h5>
    </div>
    <div class="card-block">
        @using (Html.BeginForm("TeknikAyarlar", "Panel", FormMethod.Post, new { @class = "container" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.EPostaSunucusu, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.EditorFor(model => model.EPostaSunucusu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EPostaSunucusu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EPostaAdresi, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.EditorFor(model => model.EPostaAdresi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EPostaAdresi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EPostaSifresi, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(model => model.EPostaSifresi, new { @class = "form-control", type = "password" })
                        @Html.ValidationMessageFor(model => model.EPostaSifresi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EPostaPort, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.EditorFor(model => model.EPostaPort, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EPostaPort, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SMSSunucusu, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.EditorFor(model => model.SMSSunucusu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SMSSunucusu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SMSTelefonNo, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.EditorFor(model => model.SMSTelefonNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SMSTelefonNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SMSSifresi, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.TextBoxFor(model => model.SMSSifresi, new { @class = "form-control", type = "password" })
                        @Html.ValidationMessageFor(model => model.SMSSifresi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SMSMesajBasligi, htmlAttributes: new { @class = "control-label col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        @Html.EditorFor(model => model.SMSMesajBasligi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SMSMesajBasligi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-offset-2 col-lg-10 col-md-10">
                        <input type="submit" value="Onayla" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


