                    {
                        <tr>
                            <th scope="row">@(urunSayisi++)</th>
                            <td>@item.Baslik</td>
                            <td>@(item.Etkin ? "Etkin" : "Etkin Değil")</td>
                            <td>
                                <button type="button" class="btn btn-inverse btn-sm waves-effect" data-toggle="modal" data-target="#urunKategoriDuzenle"><i class="fa fa-edit"></i></button>
                                <div class="modal fade" id="urunKategoriDuzenle" tabindex="-1" role="dialog">
                                    @Html.Action("UrunKategoriDuzenle", "Kategoriler", new { id = item.UrunKategoriID })
                                </div>
                                <button type="button" class="btn btn-danger btn-sm waves-effect" data-toggle="modal" data-target="#urunKategoriSil"><i class="fas fa-times"></i></button>
                                <div class="modal fade" id="urunKategoriSil" tabindex="-1" role="dialog">
                                    @Html.Action("UrunKategoriSil", "Kategoriler", new { id = item.UrunKategoriID })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>