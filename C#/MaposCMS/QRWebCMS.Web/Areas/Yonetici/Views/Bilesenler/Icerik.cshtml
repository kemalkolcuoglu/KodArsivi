@model List<QRWebCMS.Web.Models.Icerik>
@{
    ViewBag.Title = "İçerik";
    Layout = "~/Areas/Yonetici/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h4 class="m-b-10">İçerikler</h4>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/Yonetici/Panel/Anasayfa">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Bileşenler</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">İçerik</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>İçerik Listesi</h5>
        @*<button type="button" class="btn btn-primary waves-effect" data-toggle="modal" data-target="#icerikEkle"><i class="fa fa-plus"></i> İçerik Ekle</button>
        <div class="modal fade" id="icerikEkle" tabindex="-1" role="dialog">
            @Html.Action("IcerikEkle", "Bilesenler")
        </div>*@
        <a href="~/Yonetici/Bilesenler/IcerikEkle" class="btn btn-primary waves-effect"><i class="fa fa-plus"></i> İçerik Ekle</a>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Etkin</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int icerikSayisi = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(icerikSayisi++)</th>
                            <td>@item.Baslik</td>
                            <td>@(item.Etkin ? "Etkin" : "Etkin Değil")</td>
                            <td>
                                @*<button type="button" class="btn btn-inverse btn-sm waves-effect" data-toggle="modal" data-target="#icerikDuzenle"><i class="fa fa-edit"></i></button>
                                <div class="modal fade" id="icerikDuzenle" tabindex="-1" role="dialog">
                                    @Html.Action("IcerikDuzenle", "Bilesenler", new { id = item.IcerikID })
                                </div>*@
                                <a href="~/Yonetici/Bilesenler/IcerikDuzenle/@item.IcerikID" class="btn btn-inverse btn-sm waves-effect"><i class="fa fa-edit"></i></a>
                                <button type="button" class="btn btn-danger btn-sm waves-effect" data-toggle="modal" data-target="#icerikSil"><i class="fas fa-times"></i></button>
                                <div class="modal fade" id="icerikSil" tabindex="-1" role="dialog">
                                    @using (Html.BeginForm("IcerikSil", "Bilesenler", new { id = item.IcerikID }, FormMethod.Post))
                                    {
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">İçerik Sil</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @Html.AntiForgeryToken()
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <p>Seçmiş olduğunuz İçerik silinecektir. Silmek istediğinize emin misiniz?</p>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal"><i class="fa fa-times"></i> İptal</button>
                                                    <button type="submit" class="btn btn-danger waves-effect waves-light"><i class="fa fa-check"></i> Onayla</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Content
{
    <style>
        @@media (min-width: 768px) {
            .modal-xl {
                width: 90%;
                max-width: 1200px;
            }
        }
    </style>
}


@section Scripts
{
    <script src="~/Areas/Yonetici/Assets/js/tinymce/tinymce.min.js"></script>
    <script src="~/Areas/Yonetici/Assets/pages/wysiwyg-editor/wysiwyg-editor.js"></script>
}