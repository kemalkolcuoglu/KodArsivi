<html>
<head>
    <title>QR Web CMS - @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="QRYAZILIM" />
    <link rel="icon" href="~/Areas/Yonetici/Assets/images/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/bower_components/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/icon/feather/css/feather.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/css/font-awesome-n.min.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/css/component.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/pages/waves/css/waves.min.css" type="text/css" media="all">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/css/widget.css">
    <link rel="stylesheet" type="text/css" href="~/Areas/Yonetici/Assets/css/pages.css">

    @RenderSection("Content", required: false)
