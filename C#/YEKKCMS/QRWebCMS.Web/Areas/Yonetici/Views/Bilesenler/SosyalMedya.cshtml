@model List<QRWebCMS.Web.Models.SosyalMedya>
@{
    ViewBag.Title = "Sosyal Medya";
    Layout = "~/Areas/Yonetici/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h4 class="m-b-10">Sosyal Medya</h4>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/Yonetici/Panel/Anasayfa">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Bileşenler</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Sosyal Medya</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Sosyal Medya Listesi</h5>
        <button type="button" class="btn btn-primary waves-effect" data-toggle="modal" data-target="#sosyalEkle"><i class="fa fa-plus"></i> Sosyal Medya Ekle</button>
        <div class="modal fade" id="sosyalEkle" tabindex="-1" role="dialog">
            @Html.Action("SosyalMedyaEkle", "Bilesenler")
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Link</th>
                        <th>İkon</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int sosyalMedyaSayisi = 1; }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@(sosyalMedyaSayisi++)</th>
                            <td>@item.Baslik</td>
                            <td>@item.Link</td>
                            @if (item.Ikon != null)
                            {
                                <td><i class="@item.Ikon"></i></td>
                            }
                            else
                            {
                                <td>Yok</td>
                            }
                            <td>
                                @*<button type="button" class="btn btn-inverse btn-sm waves-effect" data-toggle="modal" data-target="#icerikDuzenle"><i class="fa fa-edit"></i></button>
                                    <div class="modal fade" id="icerikDuzenle" tabindex="-1" role="dialog">
                                        @Html.Action("SosyalMedyaDuzenle", "Bilesenler", new { id = item.SosyalMedyaID })
                                    </div>*@
                                <a href="~/Yonetici/Bilesenler/SosyalMedyaDuzenle/@item.SosyalMedyaID" class="btn btn-inverse btn-sm waves-effect"><i class="fa fa-edit"></i></a>
                                <button type="button" class="btn btn-danger btn-sm waves-effect" data-toggle="modal" data-target="#icerikSil"><i class="fas fa-times"></i></button>
                                <div class="modal fade" id="icerikSil" tabindex="-1" role="dialog">
                                    @using (Html.BeginForm("SosyalMedyaSil", "Bilesenler", new { id = item.SosyalMedyaID }, FormMethod.Post))
                                    {
                                        <div class="modal-dialog modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Sosyal Medya Sil</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    @Html.AntiForgeryToken()
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                        <p>Seçmiş olduğunuz Sosyal Medya silinecektir. Silmek istediğinize emin misiniz?</p>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal"><i class="fa fa-times"></i> İptal</button>
                                                    <button type="submit" class="btn btn-danger waves-effect waves-light"><i class="fa fa-check"></i> Onayla</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
