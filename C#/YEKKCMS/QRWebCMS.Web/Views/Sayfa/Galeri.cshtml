@model List<QRWebCMS.Web.Models.Galeri>
@{
    ViewBag.Title = "Galeri";
}

<section class="page-header page-header-modern bg-color-dark page-header-md">
    <div class="container">
        <div class="row">
            <div class="col-md-8 order-2 order-md-1 align-self-center p-static">
                <h1 class=""><strong>Fotoğraf Galeri</strong></h1>
            </div>
            <div class="col-md-4 order-1 order-md-2 align-self-center">
                <ul class="breadcrumb d-block text-md-right breadcrumb-light">
                    <li><a href="~/Ev/Anasayfa">Anasayfa</a></li>
                    <li><a href="#">Fotoğraf Galeri</a></li>
                    <li class="active">Fotoğraf</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<div class="container py-2">
    <div class="row portfolio-list sort-destination lightbox" data-sort-id="portfolio" data-plugin-options="{'delegate': 'a.lightbox-portfolio', 'type': 'image', 'gallery': {'enabled': true}}">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 isotope-item">
                    <div class="portfolio-item">
                        <span class="thumb-info thumb-info-lighten thumb-info-no-borders thumb-info-bottom-info thumb-info-centered-icons border-radius-0">
                            <span class="thumb-info-wrapper border-radius-0">
                                <img src="../../@item.Gorsel" class="img-fluid border-radius-0" alt="" style="height:200px">
                                <span class="thumb-info-title">
                                    <span class="thumb-info-inner line-height-1 font-weight-bold text-dark position-relative top-3">@item.Baslik</span>
                                </span>
                                <span class="thumb-info-action">
                                    <a href="../../@item.Gorsel" class="lightbox-portfolio">
                                        <span class="thumb-info-action-icon thumb-info-action-icon-light"><i class="fas fa-search text-dark"></i></span>
                                    </a>
                                </span>
                            </span>
                        </span>
                    </div>
                </div>
            }
        </div>
