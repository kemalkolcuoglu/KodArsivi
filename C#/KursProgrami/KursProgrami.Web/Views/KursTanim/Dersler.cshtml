@model List<KursProgrami.Model.Ders>
@{
    ViewBag.Title = "Dersler";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h4 class="m-b-10">Dersler</h4>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/Panel/Anasayfa">
                            <i class="fas fa-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Kurs Tanım</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Dersler</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Ders Listesi</h5>
        <a href="~/KursTanim/DersEkle" class="btn btn-primary btn-sm waves-effect"><i class="fa fa-plus"></i> Ders Ekle</a>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Ders Adı</th>
                        <th>Sınıf Adı</th>
                        <th>Ders Açıklaması</th>
                        <th>Etkin</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DersAdi</td>
                            <td>@item.SinifAdi</td>
                            <td>@item.DersAciklamasi</td>
                            <td>@(item.Etkin ? "Etkin" : "Etkin Değil")</td>
                            <td>
                                <a href="~/KursTanim/DersDuzenle/@item.DersID" class="btn btn-inverse btn-sm waves-effect"><i class="fa fa-edit"></i></a>
                                <button type="button" class="btn btn-danger btn-sm waves-effect" data-toggle="modal" data-target="#dersSil"><i class="fas fa-times"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
