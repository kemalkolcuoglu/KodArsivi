@model KursProgrami.Model.Egitmen
@{
    ViewBag.Title = "Eğitmen İşlemleri";
}

<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                    <h4 class="m-b-10">Eğitmen İşlemleri</h4>
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="~/Panel/Anasayfa">
                            <i class="fas fa-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Kişiler</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="~/Kisiler/Egitmenler">Eğitmenler</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Eğitmen İşlemleri</h5>
    </div>
    <div class="card-block">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-horizontal col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ad, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Ad, new { htmlAttributes = new { @class = "form-control", placeholder = "Ad" } })
                            @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Soyad, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Soyad, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyad" } })
                            @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.Telefon, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefon" } })
                            @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OzelKod, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.OzelKod, new { htmlAttributes = new { @class = "form-control", placeholder = "Özel Kod" } })
                            @Html.ValidationMessageFor(model => model.OzelKod, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", placeholder = "Açıklama", rows = "5" })
                            @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Etkin, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.CheckBoxFor(model => model.Etkin)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OzelKod1, htmlAttributes: new { @class = "control-label col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12" })
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.EditorFor(model => model.OzelKod1, new { htmlAttributes = new { @class = "form-control", placeholder = "Özel Kod-1" } })
                            @Html.ValidationMessageFor(model => model.OzelKod1, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OzelKod2, htmlAttributes: new { @class = "control-label col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12" })
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.EditorFor(model => model.OzelKod2, new { htmlAttributes = new { @class = "form-control", placeholder = "Özel Kod-1" } })
                            @Html.ValidationMessageFor(model => model.OzelKod2, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OzelKod3, htmlAttributes: new { @class = "control-label col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12" })
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.EditorFor(model => model.OzelKod3, new { htmlAttributes = new { @class = "form-control", placeholder = "Özel Kod-3" } })
                            @Html.ValidationMessageFor(model => model.OzelKod3, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.OzelKod4, htmlAttributes: new { @class = "control-label col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12" })
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.EditorFor(model => model.OzelKod4, new { htmlAttributes = new { @class = "form-control", placeholder = "Özel Kod-4" } })
                            @Html.ValidationMessageFor(model => model.OzelKod4, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-top:25px">
                <div class="col-lg-12 col-md-12">
                    <input type="submit" value="Onayla" class="btn btn-primary btn-block" />
                </div>
            </div>
        }
    </div>
</div>
