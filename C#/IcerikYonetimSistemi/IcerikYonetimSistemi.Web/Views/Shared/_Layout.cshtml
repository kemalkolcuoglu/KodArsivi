@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - İçerik Yönetim Sistemi</title>
	@Styles.Render("~/css/all")
</head>
<body>
	@{
		IcerikYonetimSistemi.IslemKatmani.SayfaIslemleri sayfaIslemleri = new IcerikYonetimSistemi.IslemKatmani.SayfaIslemleri();
	}
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
		<div class="container">
			<a class="navbar-brand" href="~/Ev/Anasayfa">İçerik Yönetim Sistemi</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<a class="nav-link" href="~/Ev/Anasayfa">Anasayfa</a>
					</li>
					@foreach (var item in sayfaIslemleri.VeriListesi(x => x.Etkin))
					{
						<li class="nav-item">
							<a class="nav-link" href="~/Sayfalar/Sayfa/@item.SayfaID">@item.SayfaBasligi</a>
						</li>
					}

					@if (Session["giris"] == null)
					{
						<li class="nav-item">
							<a class="nav-link" href="~/Ev/KullaniciGirisi">Kullanıcı Girişi</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="~/Ev/KayitOl">Kayit Ol</a>
						</li>
					}
					else
					{
						<li class="nav-item">
							<a class="nav-link" href="~/Ev/ProfiliDuzenle">Profil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="~/Ev/CikisYap">Çıkış Yap</a>
						</li>
					}

				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - İçerik Yönetim Sistemi</p>
		</footer>
	</div>

	@Scripts.Render("~/js/all")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>