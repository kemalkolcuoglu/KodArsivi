@model List<IcerikYonetimSistemi.VarlikKatmani.KullaniciYetki>
@{
	ViewBag.Title = "KullaniciYetki";
	Layout = "~/Views/Shared/YoneticiLayout.cshtml";
}

<div class="card mb-3">
	<div class="card-header">
		<i class="fas fa-table"></i>
		Bilgiler
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Kullanıcı Yetki ID</th>
						<th>Kullanıcı Yetki Adı</th>
						<th>Düzenle</th>
						<th>Sil</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Kullanıcı Yetki ID</th>
						<th>Kullanıcı Yetki Adı</th>
						<th>Düzenle</th>
						<th>Sil</th>
					</tr>
				</tfoot>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.KullaniciYetkiID</td>
							<td>@item.KullaniciYetkiAdi</td>
							<td><a href="~/Yonetici/KullaniciYetkiDuzenle/@item.KullaniciYetkiID" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil"></span></a></td>
							<td><a href="~/Yonetici/KullaniciYetkiSil/@item.KullaniciYetkiID" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-remove"></span></a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>



