@model List<IcerikYonetimSistemi.VarlikKatmani.SayfaIcerikYorum>
<div class="card mb-3">
	<div class="card-header">
		<i class="fas fa-table"></i>
		Bilgiler
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
				<thead>
					<tr>
						<th>Sayfa ID</th>
						<th>Sayfa İçerik ID</th>
						<th>Sayfa İçerik Yorum ID</th>
						<th>Etkin</th>
						<th>Görüntüle</th>
						<th>Düzenle</th>
						<th>Sil</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Sayfa ID</th>
						<th>Sayfa İçerik ID</th>
						<th>Sayfa İçerik Yorum ID</th>
						<th>Etkin</th>
						<th>Görüntüle</th>
						<th>Düzenle</th>
						<th>Sil</th>
					</tr>
				</tfoot>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.SayfaID</td>
							<td>@item.SayfaIcerikID</td>
							<td>@item.SayfaIcerikYorumID</td>
							<td>@item.Etkin</td>
							<td></td>
							<td><a href="~/Yonetici/SayfaIcerikYorum/@item.SayfaIcerikYorumID" class="btn btn-sm btn-info"><span class="glyphicon glyphicon-file"></span></a></td>
							<td><a href="~/Yonetici/SayfaIcerikYorumDuzenle/@item.SayfaIcerikYorumID" class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-pencil"></span></a></td>
							<td><a href="~/Yonetici/SayfaIcerikYorumSil/@item.SayfaIcerikYorumID" class="btn btn-sm btn-danger"><span class="glyphicon glyphicon-remove"></span></a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
